<h1><%= @course.name %> Enrollments</h1>
<%= link_to 'Add Enrollment', new_course_enrollment_path(@course) %>
<hr />

<h2>Teacher</h2>
<ul>
  <% @teachers.each do |t| %>
    <li>
      <%= t.user.full_name %>
      <br />
      <%= link_to 'Remove', [@course, t], method: :delete %>
    </li>
  <% end %>
</ul>

