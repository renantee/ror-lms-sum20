<h1><%= @user.full_name %></h1>
<hr />
<h2>Courses</h2>
<ul>
  <% @user.courses.each do |course| %>
    <li>
      <%= link_to course.name, course %>
    </li>
  <% end %>
</ul>
<br />
<%= link_to 'Edit User', edit_user_path(@user), class: 'ui info button' %>
<%= link_to 'Delete User', @user, method: :delete, class: 'ui red button' %>